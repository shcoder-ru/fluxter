{
  "name": "fluxtor",
  "version": "1.0.9",
  "description": "Simple container of unidirectional data flow.",
  "main": "dist/fluxtor.js",
  "browser:main": "dist/fluxtor-client.js",
  "jsnext:main": "src/fluxtor.js",
  "scripts": {
    "build-browser-uncompressed": "webpack --config webpack.config.babel.js",
    "build-browser-compressed": "webpack -p --config webpack.config.babel.js",
    "build-babel": "babel src --out-dir dist",
    "build": "npm run build-babel; npm run build-browser-uncompressed; npm run build-browser-compressed",
    "test": "mocha --opts tests/test-mocha.opts",
    "coverage": "BABEL_ENV=test mocha --opts tests/coverage-mocha.opts > ./coverage.lcov",
    "make-readme": "jsdoc2md --template README.hbs --files src/fluxtor.js > README.md",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shcoder-ru/fluxtor.git"
  },
  "keywords": [
    "flux",
    "store",
    "unidirectional",
    "data",
    "flow",
    "action",
    "middleware",
    "reducer",
    "state",
    "subscribe",
    "es6"
  ],
  "author": "Vasily Shilov <shcoder.ru@ya.ru> (https://github.com/shcoder-ru)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/shcoder-ru/fluxtor/issues"
  },
  "homepage": "https://github.com/shcoder-ru/fluxtor#readme",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-coverage": "^0.1.5",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "codecov": "^2.2.0",
    "expect": "^1.20.2",
    "jsdoc-to-markdown": "^3.0.0",
    "mocha": "^3.4.2",
    "mocha-lcov-reporter": "^1.3.0",
    "webpack": "^3.0.0"
  }
}
